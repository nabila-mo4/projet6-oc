 <bean id="jobRepository"
          class="org.springframework.batch.core.repository.support.MapJobRepositoryFactoryBean">
        <property name="transactionManager" ref="transactionManager" />
    </bean>

    <bean id="transactionManager"
          class="org.springframework.batch.support.transaction.ResourcelessTransactionManager" />

    <bean id="jobLauncher" class="org.springframework.batch.core.launch.support.SimpleJobLauncher">
        <property name="jobRepository" ref="jobRepository" />
    </bean>

    <bean id="mail" class="org.librarypro.webapp.batch.Mail">
        <property name="mailSender" ref="mailSender"/>
    </bean>
    
    
     <bean id="runScheduler" class="org.librarypro.webapp.batch.BatchLancher"/>
    
     <!--  <bean id="task" class="org.librarypro.webapp.batch.Task" scope="step"/>--> 
     
     <bean id="reservationTask" class="org.librarypro.webapp.batch.ReservationTask" scope="step"/>
     
     <bean id="rappelTask" class="org.librarypro.webapp.batch.RappelTask" scope="step"/>


    <batch:job id="scheduledJob">
    
     	 <batch:step id="jobStep2" next="jobStep3">
            <batch:tasklet ref="reservationTask" />  
        </batch:step>
        
   		 <batch:step id="jobStep3">
            <batch:tasklet ref="rappelTask" />  
        </batch:step>
    
    </batch:job>
    
    
    <bean id="batchLancher" class="org.librarypro.webapp.batch.BatchLancher"/>
    
    <task:scheduled-tasks>
        <!-- <task:scheduled ref="batchLancher" method="run" cron="*/5 * * * * *"/>-->
        <task:scheduled ref="batchLancher" method="run" fixed-delay="300000"/>
    </task:scheduled-tasks>
    
 </beans>